{%- macro coil_class(value) -%}
    {%- if value == True -%}
        success
    {%- else -%}
        danger
    {%- endif -%}
{%- endmacro -%}
<!DOCTYPE html>
<html lang="en">

    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <meta name="author" content="Eric O'Callaghan">
        <meta name="description" content="Modbus testing.">
        <meta name="keywords" content="Modbus">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta property="og:type" content="website">
        <meta property="og:site_name" content="Modbus">
        <meta property="og:title" content="Modbus">
        <meta property="og:description" content="Modbus testing.">
        <meta property="og:url" content="https://modbus.home.ericoc.com/">
        <title>Modbus</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </head>

    <body class="card">

        <header class="card-header container-fluid heading-text">

            <h1 title="Modbus" class="card-title">
                <a class="card-text" href="{{ url_for('index') }}">Modbus</a>
            </h1>

        </header>

        <main class="card-body">

            <div class="card-title">
                <a class="border border-dark card-text btn btn-secondary" href="{{ url_for('toggle_all') }}" role="button">
                    Toggle All
                </a>
            </div>

            <div class="card-text">

                <ol class="list-group w-50">
{%- for number, value in coils.items() %}
                    <li class="my-1 list-group-item" title="{{ number }}: {{ value }}" value="{{ number }}">
                        <b>{{ number }}</b>.
                        <a class="border border-dark btn btn-{{ coil_class(value) }} list-group-item-text" href="{{ url_for('toggle', coil=number, value=not value) }}" role="button" title="Toggle coil #{{ number }} from {{ value }} to {{ not value }}.">
                            {{ value }}
                        </a>
                    </li>
{%- endfor %}
                </ol>

            </div>

        </main>

    </body>

</html>
