{%- macro coil_class(value) -%}
    {%- if value == True -%}
        success
    {%- else -%}
        danger
    {%- endif -%}
{%- endmacro -%}
{%- set coils_active = [] %}
{%- set coils_inactive = [] %}
<!DOCTYPE html>
<html lang="en">

    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <meta name="author" content="Eric O'Callaghan">
        <meta name="description" content="Modbus testing.">
        <meta name="keywords" content="Modbus">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta property="og:type" content="website">
        <meta property="og:site_name" content="Modbus">
        <meta property="og:title" content="Modbus">
        <meta property="og:description" content="Modbus testing.">
        <meta property="og:url" content="https://modbus.home.ericoc.com/">
        <title>Modbus</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </head>

    <body class="card">

        <header class="card-header">

            <h1 title="Modbus" class="card-title">
                <a class="card-text" href="{{ url_for('index') }}">Modbus</a>
            </h1>

        </header>

        <main class="card-body">

            <ol class="list-group list-group-horizontal list-group-flush">
{%- for number, value in coils.items() %}
    {%- if value %}
        {%- set _ = coils_active.append(number) -%}
    {%- else %}
        {%- set _ = coils_inactive.append(number) -%}
    {%- endif %}
                <li class="border-0 card-text list-group-item list-group-item-text" title="Toggle coil #{{ number }} from {{ value }} to {{ not value }}." value="{{ number }}">
                    <b>{{ number }}</b>.
                    <a class="border border-dark btn btn-{{ coil_class(value) }} p-2 text-{{ coil_class(value) }}" href="{{ url_for('toggle', coil=number, value=not value) }}" role="button" aria-label="Toggle coil #{{ number }} from {{ value }} to {{ not value }}."></a>
                </li>
{%- endfor %}
            </ol>

        </main>

        <footer class="card-footer text-white">

            <p class="card-text">
                <a class="border border-dark btn btn-primary mx-3 p-2" href="{{ url_for('toggle_all') }}" role="button" aria-label="Toggle All Coils" title="Toggle All Coils">
                    Toggle All
                </a>
                <span class="border border-dark text-success m-1 p-2 rounded" title="{{ coils_active|length }} on">
                    <b>{{ coils_active|length }}</b> on
                </span>
                <span class="border border-dark text-danger m-1 p-2 rounded" title="{{ coils_inactive|length }} off">
                    <b>{{ coils_inactive|length }}</b> off
                </span>
                <span class="border border-dark text-secondary mx-3 p-2 rounded" title="{{ coils|length }} total">
                    <b>{{ coils|length }}</b> total
                </span>
            </p>

        </footer>

    </body>

</html>
